{{#each erros}}
	<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
	<div class="card-header">
		<div class="card-menu">
			<div class="card-title">
				<div class="cat">
					<h4>{{title}}</h4>
					<a href="/categorias">
						<button type="button" class="btn btn-primary" accesskey="a">Lista (Alt+a)</button></a>
				</div>
			</div>
		</div>
	</div>
	<div class="card-body">
		<form action="/categorias/nova" method="post">
			<div class="form-group">
				<div class="col-md-12">
					<label for="cat_nome">Nome</label>
					<input type="text" name="cat_nome" class="form-control" autofocus>
				</div>			
			</div>
			<div class="form-group">
				<div>
					<a href="/categorias/nova">
						<button type="submit" class="btn btn-success">Salvar</button>
					</a>	
				</div>
			</div>
		</form>
	</div>
</div>