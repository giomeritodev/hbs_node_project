{{#each erros}}
	<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
	<div class="card-header">
		<div class="card-menu">
			<div class="card-title">
				<div class="cat">
					<h4>{{title}}</h4>
					<a href="/categorias">
						<button type="button" class="btn btn-primary" accesskey="a">Lista (Alt+a)</button></a>
				</div>
			</div>
		</div>
	</div>
	<div class="card-body">
        {{#each categoria}}                        
		<form action="/categorias/update/{{cat_id}}" method="post">
			<div class="form-group">
				<div class="col-md-12">
					<label for="cat_nome">Nome</label>
                        <input type="text" name="cat_nome" class="form-control" value="{{cat_nome}}">
        {{else}}                    
        {{/each}}
				</div>			
			</div>
			<div class="form-group">
				<div>
					<button type="submit" class="btn btn-success">Salvar</button>				
				</div>
			</div>
		</form>
	</div>
</div>