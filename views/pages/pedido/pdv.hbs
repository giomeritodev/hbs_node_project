<div id="pdv" class="row mt-4">
    <div class="col">
        <form action="/pedidos/pdv/add-items-pedido" method="post">
            <datalist id="produtos">
            {{#each produtos}}
               <option value="{{this.prod_id}}">{{this.prod_nome}} R$: {{this.prod_valor}}</option>               
            {{/each}}
            </datalist>
            
            <datalist id="clientes">
            {{#each clientes}}
               <option value="{{this.cli_id}}">{{this.cli_nome}}</option>               
            {{/each}}
            </datalist>
            
            <div class="row">
                <div class="col-md-12">
                    <label for="cliente_id">Cliente</label>                        
                    <input type="search" class="form-control" placeholder="Favor selecione o cliente" name="cliente_id" id="cliente_id" list="clientes" />    
                </div>
            </div>
            <div class="row form-group mt-4">
                <div class="col-md-3 col-sm-12">
                    <label for="ped_quantidade">Quantidade</label>
                    <input type="number" class="form-control" name="ped_quantidade" required value="1">
                </div>

                <div class="col-md-6 col-sm-12">
                    <label for="prod_id">CÃ³digo do produto</label>
                    <input type="search" class="form-control" id="produto_id" placeholder="Selecione o produto" name="produto_id" list="produtos" autofocus="true">
                </div>
                <div class="col-md-3 col-sm-12" style="margin: auto;">
                    <br>
                    <button type="submit" id="btn-add" class="btn btn-primary">Adicionar</button>
                </div>
            </div>
        </form>        
    </div>
    
{{# if pedido }}
<div class="col fti border"> 
    <div class="col-md-12 mt-4 form-group">          
        <table class="table table-sm table-borderless responsive">                        
            Itens do pedido
            <thead>
                <tr>
                    <th>#</th>
                    <th>Cod</th>
                    <th>Produto</th>
                    <th>Qtd</th>
                    <th>Vlr.Unit</th>
                    <th>Total Item</th>
                </tr>
            </thead>
            <tbody>
                            
                {{# each pedido}}
                    
                    <tr>
                        <td>{{this.sequencia}}</td>
                        <td>{{this.item.prod_id}}</td>
                        <td>{{this.item.prod_nome}}</td>
                        <td>{{this.qtd}}</td>
                        <td>{{this.item.prod_valor}}</td>
                        <td>{{this.valor}}</td>
                    </tr>
                    
                {{/each}}
            
            </tbody>
        </table>
        <hr>
        <div class="row">
            <div class="col-md-4 col-sm-12">
                <label>Total itens</label>
                <input type="text" name="ped_totalQtd" class="form-control" disabled value="{{ totalQtd }}">
            </div>
            <div class="col-md-4 col-sm-12">
                <label>Desconto</label>
                <input class="form-control" type="text" name="ped_desconto" >
            </div>
            <div class="col-md-4 col-sm-12">
                <label>Valor Total</label>
                <input class="form-control" name="ped_valorTotal" disabled value="{{ valorTotal }}">
            </div>
        </div>
    </div>    
 </div>
 </div>    
      

{{else}}  
    <h4>Nenhum item adicionado!</h4>
{{/ if}}